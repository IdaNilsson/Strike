@model Strike.Models.Message

<div class="margin-top container">
    <div class="row header-container">
        <div class="col-md-12">
            <span>@ViewData["Title"]</span>
        </div>
    </div>
    <div class="row full-box">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="receiverUserId" value="@ViewData["receiverUserId"]" />
                <input type="hidden" name="advertisementId" value="@ViewData["advertisementId"]" />
                <div class="form-group">
                    <input asp-for="Subject" class="form-control" placeholder="Ämne..." />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea rows="4" cols="50" asp-for="Text" class="form-control" placeholder="Meddelande..."></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Skicka" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>

